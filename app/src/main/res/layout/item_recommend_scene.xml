<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp">

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:maxHeight="12dp"
            android:src="@drawable/ic_location_white" />

        <TextView
            android:id="@+id/scene_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_location"
            android:layout_toEndOf="@id/icon_location"
            android:text="@string/default_site_name"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/icon_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_location"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:maxHeight="12dp"
            android:src="@drawable/ic_people" />

        <TextView
            android:id="@+id/check_in_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_people"
            android:layout_toEndOf="@id/icon_people"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </RelativeLayout>

</FrameLayout>